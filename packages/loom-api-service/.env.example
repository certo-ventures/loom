# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_URL=postgresql://loom:loom@localhost:5432/loom

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Storage
STORAGE_TYPE=in-memory
STORAGE_BASE_PATH=./data/executions
PARQUET_THRESHOLD=102400

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Multi-tenancy
MULTITENANCY_ENABLED=true
DEFAULT_TENANT=default

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true
