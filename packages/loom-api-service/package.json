{
  "name": "@certo-ventures/loom-api-service",
  "version": "0.1.0",
  "description": "Production-ready REST API service for Loom actor system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "node build.mjs",
    "start": "tsx src/server.ts",
    "test": "vitest",
    "test:integration": "vitest run tests/integration.test.ts",
    "demo": "tsx demo.ts",
    "quick-demo": "tsx scripts/quick-demo.ts",
    "docker:build": "docker build -t loom-api-service .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@certo-ventures/loom": "file:../../",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "joi": "^17.12.0",
    "dotenv": "^16.3.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
